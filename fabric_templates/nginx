server {
    listen 80;
    server_tokens off;
    server_name {{instance}};

     location / {
         include uwsgi_params;
         uwsgi_pass unix:/tmp/{{instance}}.sock;
     }

     ## Only requests to our Host are allowed
     if ($host !~ ^({{instance}})$ ) {
        return 444;
     }
{% if settings != 'dev' %}

    location /admin {
        allow 127.0.0.1;
        deny all;
    }


    locatation /api/admin {
        allow 127.0.0.1;
        deny all;
    }

{% endif %}
}

